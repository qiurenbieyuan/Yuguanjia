<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ygj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!-- 顶部titleBar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_selector_title"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:text="返回"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="欢迎登录"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <com.qican.ygj.view.CircleImageView
            android:id="@+id/iv_headimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/defaultheadpic"
            ygj:civ_border_color="@color/head_border"
            ygj:civ_border_width="2dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            style="@style/MenuIcon"
            android:src="@drawable/username" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />

        <LinearLayout style="@style/Icon_50dp">

            <ImageView
                android:id="@+id/iv_del_username"
                style="@style/Icon_50dp"
                android:padding="10dp"
                android:src="@drawable/delete"
                android:tint="@color/gray_text"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:gravity="center">

        <ImageView
            style="@style/MenuIcon"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="请输入账户密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />

        <LinearLayout style="@style/Icon_50dp">

            <ImageView
                android:id="@+id/iv_del_password"
                style="@style/Icon_50dp"
                android:padding="10dp"
                android:src="@drawable/delete"
                android:tint="@color/gray_text"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_btn_bg"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn_left_bg"
            android:text="注册新账号"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

        <Button
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn_right_bg"
            android:text="忘记密码"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
