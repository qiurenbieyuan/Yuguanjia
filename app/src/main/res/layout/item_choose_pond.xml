<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_item_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_pond_img"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/pond" />

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/selected"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_selected"
        android:layout_toRightOf="@id/iv_pond_img"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_pond_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:text="池塘名"
            android:textColor="@color/text_black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvpond_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="详细描述"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
