<resources>

    <!--Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--子菜单图标-->
    <style name="MenuIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/add</item>
    </style>

    <!--子菜单图标-->
    <style name="Icon_50dp">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:src">@drawable/add</item>
    </style>

    <style name="MenuIcon.CenterVertical">
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--子菜单背景-->
    <style name="MenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>
    <!--子菜单字体-->
    <style name="MenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:text">"子菜单"</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="auto_wifi_status_style_normal">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_sub_text</item>
        <item name="android:textSize">@dimen/loading_text_size</item>
    </style>
</resources>
